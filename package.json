{
  "name": "blogpost",
  "version": "1.0.0",
  "description": "blogpost application for fullstackopen",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start-prod": "NODE_ENV=production node index.js",
    "dev": "NODE_ENV=developement nodemon index.js",
    "install-client": "cd client && npm install",
    "build-client": "rm -rf build && cd client && npm run build && mv build ../",
    "start": "npm run build-client && npm run start-prod",
    "eslint": "./node_modules/.bin/eslint .",
    "eslint:fix": "./node_modules/.bin/eslint . --fix",
    "heroku-postbuild": "npm run install-client && npm run build-client"
  },
  "author": "David Gvetadze",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.0",
    "nodemon": "^2.0.6",
    "supertest": "^5.0.0"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "mongoose-unique-validator": "^2.0.3"
  }
